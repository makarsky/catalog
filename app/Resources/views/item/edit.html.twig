{% extends 'base.html.twig' %}

{% block title %}
    {{ 'edit_item'| trans }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'edit_item' | trans }}</h1>

        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="{{ 'save' | trans }}"/>
        {{ form_end(edit_form) }}

        <ul>
            <li>
                <a href="{{ path('item_index') }}">{{ 'back_to_list' | trans }}</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="{{ 'delete' | trans }}">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
